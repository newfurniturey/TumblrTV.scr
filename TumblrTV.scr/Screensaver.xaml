<Window x:Class="TumblrTV.scr.Screensaver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:gif="http://wpfanimatedgif.codeplex.com"
		Title="TumblrTV"
		Height="350" Width="525"
		WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized"
		ShowInTaskbar="False"
		KeyDown="Window_KeyDown"
		MouseDown="Window_MouseDown"
		MouseMove="Window_MouseMove"
>
	<Grid x:Name="MainGrid">
		<Image x:Name="static"
			gif:ImageBehavior.AnimatedSource="Resources/static.gif"
			HorizontalAlignment="Left" VerticalAlignment="Top"
			Stretch="UniformToFill"
		/>
		<Image x:Name="logo_small"
			Source="Resources/logo.png"
			HorizontalAlignment="Left" VerticalAlignment="Top"
			Width="29" Height="39"
			Margin="20,10,0,0" 
		/>

		<Image x:Name="logo_loading"
			gif:ImageBehavior.AnimatedSource="Resources/loading.gif"
			HorizontalAlignment="Left" VerticalAlignment="Top"
			Width="242" Height="326"
			Margin="155,84,0,-60" 
		/>
	</Grid>
</Window>
