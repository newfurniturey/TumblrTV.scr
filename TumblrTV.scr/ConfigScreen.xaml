<Window x:Class="TumblrTV.scr.ConfigScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TumblrTV Settings" Height="207" Width="489" ResizeMode="NoResize" ShowInTaskbar="False">
	<Grid Margin="0,0,0,19">
		<Button Content="OK" HorizontalAlignment="Left" Margin="354,20,0,0" VerticalAlignment="Top" Width="110" Height="25"/>
		<Button Content="Cancel" HorizontalAlignment="Left" Margin="354,55,0,0" VerticalAlignment="Top" Width="110" Height="25"/>
		<GroupBox Header="Tags" HorizontalAlignment="Left" Height="134" Margin="20,10,0,0" VerticalAlignment="Top" Width="320">
			<ItemsControl Margin="0,0,0,10">
				<TextBox HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287"/>

				<Label Margin="10,0" Height="36">(comma separated)</Label>
				<CheckBox Content="Shuffle images from each tag." Margin="10,0,0,0" IsChecked="True" />
			</ItemsControl>
		</GroupBox>

	</Grid>
</Window>
